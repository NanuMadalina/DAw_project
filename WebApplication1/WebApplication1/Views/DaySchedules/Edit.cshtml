            </div>
            <div class="form-group">
                <label asp-for="IdDay" class="control-label"></label>
                <select asp-for="IdDay" class="form-control" asp-items="ViewBag.IdDay"></select>
                <span asp-validation-for="IdDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdHour" class="control-label"></label>
                <select asp-for="IdHour" class="form-control" asp-items="ViewBag.IdHour"></select>
                <span asp-validation-for="IdHour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

